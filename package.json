{
  "name": "@ryexley/service-core",
  "version": "0.0.1",
  "description": "Microservice core",
  "main": "dist/index.js",
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "scripts": {
    "server": "NODE_ENV=dev nodemon -L --exec babel-node ./src/index.js | bunyan",
    "lint": "eslint ./src",
    "lint:fix": "yarn run lint --fix",
    "build": "rm -rf ./dist && babel ./src --out-dir ./dist",
    "version": "standard-version --sign",
    "prepublish": "yarn run build",
    "publish": "npm publish --access public",
    "serve-sample": "NODE_CONFIG_DIR=./example/config NODE_ENV=dev nodemon -L --exec babel-node ./example/src/index.js | bunyan"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/node": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "bunyan": "^1.8.12",
    "bunyan-pretty-colors": "^0.1.7",
    "config": "^3.1.0",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "http-status": "^1.3.2",
    "node-uuid": "^1.4.8",
    "response-time": "^2.3.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "commitizen": "^3.1.1",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.16.0",
    "eslint-config-eslint": "^5.0.1",
    "eslint-plugin-node": "^9.1.0",
    "husky": "^2.4.0",
    "nodemon": "^1.19.1",
    "standard-version": "^6.0.1"
  },
  "nodemonConfig": {
    "events": {
      "start": "echo \"\\x1Bc\" # clear the console on service restart"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "yarn run lint"
    }
  }
}
