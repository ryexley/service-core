{
  "name": "@ryexley/service-core",
  "version": "0.0.15",
  "description": "Microservice core",
  "main": "dist/index.js",
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "scripts": {
    "server": "NODE_ENV=dev nodemon -L --exec babel-node ./src/index.js | bunyan",
    "lint": "eslint ./{src,example}",
    "lint:fix": "yarn run lint --fix",
    "build": "rm -rf ./dist && babel ./src --out-dir ./dist",
    "version": "standard-version --sign",
    "npm:publish": "yarn run build && npm publish --access public",
    "serve-sample": "NODE_ENV=development nodemon -L --exec babel-node ./example/src/index.js | bunyan"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@babel/cli": "^7.7.0",
    "@babel/core": "^7.7.2",
    "@babel/node": "^7.7.0",
    "@babel/preset-env": "^7.7.1",
    "body-parser": "^1.19.0",
    "bunyan": "^1.8.12",
    "bunyan-pretty-colors": "^0.1.7",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "debug": "^4.1.1",
    "dotenv": "^8.2.0",
    "envalid": "^6.0.0",
    "express": "^4.17.1",
    "http-status": "^1.4.0",
    "response-time": "^2.3.2",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "eslint": "^6.6.0",
    "eslint-config-eslint": "^5.0.1",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-security": "^1.4.0",
    "husky": "^3.0.9",
    "nodemon": "^1.19.4",
    "standard-version": "^7.0.0"
  },
  "nodemonConfig": {
    "events": {
      "start": "echo \"\\x1Bc\" # clear the console on service restart"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "yarn run lint"
    }
  }
}
