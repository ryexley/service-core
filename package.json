{
  "name": "@ryexley/service-core",
  "version": "0.0.22",
  "description": "Microservice core",
  "main": "dist/index.js",
  "author": {
    "name": "Bob Yexley",
    "email": "bob@yexley.net",
    "url": "https://bob.yexley.net"
  },
  "license": "ISC",
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "engines": {
    "node": ">=16.17.0",
    "npm": ">=8.15.0"
  },
  "scripts": {
    "server": "NODE_ENV=dev nodemon -L --exec babel-node ./src/index.js",
    "lint": "eslint ./{src,example}",
    "lint:fix": "npm run lint --fix",
    "build": "rm -rf ./dist && babel ./src --out-dir ./dist",
    "version": "standard-version",
    "npm:publish": "npm run build && npm publish --access public",
    "serve-sample": "NODE_ENV=development nodemon -L --exec babel-node -r dotenv/config ./example/src/index.js | ./node_modules/.bin/pino-pretty",
    "prepare": "husky install"
  },
  "dependencies": {
    "@babel/cli": "^7.19.3",
    "@babel/core": "^7.19.3",
    "@babel/node": "^7.19.1",
    "@babel/preset-env": "^7.19.3",
    "body-parser": "^1.20.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "debug": "^4.3.4",
    "dotenv": "^16.0.2",
    "envalid": "^7.3.1",
    "express": "^4.18.1",
    "http-status": "^1.5.3",
    "pino": "^8.7.0",
    "pino-pretty": "^9.1.1",
    "response-time": "^2.3.2",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "commitizen": "^4.2.5",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.24.0",
    "eslint-config-eslint": "^7.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^1.5.0",
    "husky": "^8.0.1",
    "nodemon": "^2.0.20",
    "standard-version": "^9.5.0"
  },
  "nodemonConfig": {
    "events": {
      "start": "echo \"\\x1Bc\" # clear the console on service restart"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run lint"
    }
  }
}
